<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
     <div class="container mt-3">
        <form action="/blog/addblog" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title">Title</label>
                <input required name="title" type="text" class="form-control" id="title" aria-describedby="title" placeholder="Enter title">
            </div>
            <div class="form-group mb-3">
                <label for="body">Content</label>
                <textarea required name="body" class="form-control" placeholder="Content" id="body" style="height: 100px"></textarea>
            </div>
            <div class="form-group mb-3"> 
                <label for="coverImage">Cover Image</label>
                <input name="coverImage" type="file" class="form-control" id="coverImage" aria-describedby="coverImage" >
            </div>
            <button type="submit" class="btn btn-primary ">Submit</button>

        </form>
     </div>
    <%- include('./partials/scripts') %>
</body>
</html> 